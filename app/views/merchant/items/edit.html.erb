<%= form_with url: "/merchant/#{@merchant.id}/items/#{@item.id}", method: :patch do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: @item.name %><br/>

  <%= f.label :description %>
  <%= f.text_field :description, placeholder: @item.description %><br/>

  <%= f.label :unit_price %>
  <%= f.text_field :unit_price, placeholder: @item.unit_price %>

  <%= f.submit "Update" %>
<% end %>